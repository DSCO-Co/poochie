{
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": false,
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@commerce": ["../packages/commerce/src"],
      "@commerce/*": ["../packages/commerce/src/*"],
      "@framework": ["../packages/bigcommerce/src"],
      "@framework/*": ["../packages/bigcommerce/src/*"],
      "@Segment/*": ["lib/Segment/*"],
      "@dsco/bc-data-hooks": ["lib/data-hooks/src"],
      "@bigcommerce/storefront-data-hooks": ["lib/data-hooks/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": ["node_modules"]
}
